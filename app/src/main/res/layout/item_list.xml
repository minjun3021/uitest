<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_circle"
        android:layout_width="70dp"

        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/apple"
        app:civ_border_color="#ada8b7"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="애플파이 9기 톡방"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_t2"
        app:layout_constraintLeft_toRightOf="@id/item_circle"
        app:layout_constraintTop_toTopOf="@id/item_circle" />

    <TextView
        android:id="@+id/item_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="와아"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/item_circle"
        app:layout_constraintLeft_toLeftOf="@id/item_t1"
        app:layout_constraintTop_toBottomOf="@id/item_t1" />

    <TextView
        android:id="@+id/item_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="3"
        android:textStyle="bold"
        android:textColor="#b4a8a8"
        app:layout_constraintLeft_toRightOf="@id/item_t1"
        app:layout_constraintTop_toTopOf="@id/item_t1"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-12-20"
        android:id="@+id/item_t4"
        app:layout_constraintTop_toTopOf="@id/item_t1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:textColor="#c4b2b2"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </View>
</android.support.constraint.ConstraintLayout>